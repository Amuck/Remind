<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/item_back"
        android:padding="0dp" >


        <TextView
            android:id="@+id/remind_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_alignParentLeft="true"
            android:text="10:20"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/remind_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="聚会"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/remind_time_txt" />
        <TextView
            android:id="@+id/remind_content_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:text="下班一起去吃饭吧"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/remind_time_txt"
            android:layout_below="@+id/remind_title_txt" />
        
        <TextView
            android:id="@+id/remind_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="小王"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/remind_img" />
        
        <com.remind.view.RoleDetailImageView
            android:id="@+id/remind_img"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginRight="0dp"
            android:padding="0dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            imagecontrol:border_inside_color="#ff0000"
            imagecontrol:border_thickness="1dp"
            android:src="@drawable/role_1"
            />
    </RelativeLayout>

</RelativeLayout>