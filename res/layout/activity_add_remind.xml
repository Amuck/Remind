<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_frame_background"
    android:orientation="vertical"
    android:paddingTop="40dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="31dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/contact_people" />

            <TextView
                android:id="@+id/select_peopel_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/select_peopel"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/select_peopel_btn"
                android:layout_width="151dp"
                android:layout_height="27dp"
                android:background="@drawable/add_people_board"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="31dp"
            android:layout_marginTop="22dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/remind_title" />

            <TextView
                android:id="@+id/select_title_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/select_title"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/select_title_btn"
                android:layout_width="151dp"
                android:layout_height="27dp"
                android:background="@drawable/right_board"
                android:gravity="center"
                android:text="@string/select_title_txt"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="31dp"
            android:layout_marginTop="22dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/type" />

            <TextView
                android:id="@+id/select_type_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/select_type"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/select_type_btn"
                android:layout_width="151dp"
                android:layout_height="27dp"
                android:background="@drawable/right_board"
                android:gravity="center"
                android:text="@string/select_type_txt"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="31dp"
            android:layout_marginTop="22dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/date" />

            <TextView
                android:id="@+id/select_date_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/date"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/select_date_btn"
                android:layout_width="151dp"
                android:layout_height="27dp"
                android:background="@drawable/right_board"
                android:gravity="center"
                android:text="2015/08/26"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="31dp"
            android:layout_marginTop="22dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/time" />

            <TextView
                android:id="@+id/select_time_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/time"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/select_time_btn"
                android:layout_width="151dp"
                android:layout_height="27dp"
                android:background="@drawable/right_board"
                android:gravity="center"
                android:text="07:30"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="31dp"
            android:layout_marginTop="22dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/preview" />

            <TextView
                android:id="@+id/select_preview_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/select_prev"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <com.remind.view.SwitchButton
                android:id="@+id/select_preview_btn"
                android:layout_width="51dp"
                android:layout_height="27dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/select_more_btn"
                android:layout_width="226dp"
                android:layout_height="27dp"
                android:background="@drawable/more_set_bord"
                android:text="@string/select_more"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>